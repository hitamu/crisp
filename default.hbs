<!doctype html>
<html lang="en">

<head>
  {{! Document Settings }}
  <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /> {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />
  <link rel="shortcut icon" href="{{@blog.logo}}" />
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="{{asset '/styles/justifiedGallery.min.css'}}">
  <link rel="stylesheet" type="text/css" href="{{asset '/styles/style.css'}}">
  <link rel="stylesheet" type="text/css" href="{{asset '/styles/solarized-light.css'}}">
  <meta name="HandheldFriendly" content="True" />
  <meta name="MobileOptimized" content="320" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
				<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
				<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
			<![endif]-->
  {{{block "head"}}} {{ghost_head}}
</head>

<body class="{{body_class}}">
  <div class="content index width mx-auto px2 my4">
    <header id="header">
      <div id="logo" style="background-image: url({{@blog.logo}});"></div>
      <h1>
        <div id="title">
          <a href="{{@blog.url}}">{{@blog.title}}</a>
        </div>
      </h1>
      <div id="nav">
        <ul>
          <li class="icon">
            <a href="#">
              <i class="fa fa-bars fa-2x"></i>
            </a>
          </li>
          {{navigation}}
        </ul>
      </div>
    </header>
    <main id="content">
      {{{body}}}
    </main>
    <footer id="footer">
      <div class="footer-left">
        Copyright &copy; 2018 Hitamu
      </div>
      <div class="footer-right">
        <nav>
          <ul>
            {{navigation}}
          </ul>
        </nav>
      </div>
    </footer>
  </div>
    {{ghost_foot}}
    <script src="{{asset '/js/jquery.min.js'}}"></script>
    <script src="{{asset '/js/jquery.justifiedGallery.min.js'}}"></script>
    <script src="{{asset '/js/main.js'}}"></script>
    <script src="{{asset '/js/highlight.pack.js'}}"></script>
    <script>hljs.initHighlightingOnLoad();</script>
</body>

</html>