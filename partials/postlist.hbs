<span class="h1">
  <a href="/">Archive</a>
</span>
<ul class="post-list">
  {{#foreach posts}}
  <li class="post-item">
    <div class="meta">
      <time datetime='{{date published_at format="DD-MM-YYYY"}}' itemprop="datePublished">
        {{date published_at format='DD-MM-YYYY'}}
      </time>
    </div>

    <span>
      <a href="{{url}}">{{title}}</a>
    </span>
    <span class="taglist">{{tags separator=" " prefix=" &middot; "}}</span>
  </li>
  {{/foreach}}
</ul>